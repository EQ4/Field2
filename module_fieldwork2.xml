  <property name="module.jdk.classpath.fieldwork2" value="jdk.classpath.1.9_(2)"/>
  
  <property name="compiler.args.fieldwork2" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="fieldwork2.output.dir" value="${module.fieldwork2.basedir}/out/production/fieldwork2"/>
  <property name="fieldwork2.testoutput.dir" value="${module.fieldwork2.basedir}/out/test/fieldwork2"/>
  
  <path id="fieldwork2.module.bootclasspath">
