<?xml version="1.0" encoding="UTF-8"?>
<project name="module_fieldwork2" default="compile.module.fieldwork2">
  <dirname property="module.fieldwork2.basedir" file="${ant.file.module_fieldwork2}"/>
  
  <property name="module.jdk.home.fieldwork2" value="${jdk.home.1.9_(2)}"/>
